#include <sys/types.h>
#include <sys/stat.h>
#include <unistd.h>
#include <dirent.h>
#include <string.h>
#include <stdlib.h>
#include <stdio.h>
#include <fcntl.h>

int main(){
    pid_t pid, cpid;
    int status;

    printf("S1\n");
    pid = fork();
    if(pid == 0){
    	   sleep(1);
    	   printf("S2-child\n");
	   exit(0);
    }
    else{
	sleep(3);
	printf("S2-father\n");
	wait((int*) 0);
    }
    printf("S4\n");
    pid = fork();
    if(pid == 0){
    	   sleep(4);
    	   printf("S5-child\n");
	   status = -34;
	   exit(257);
    }
    else{
	sleep(1);
	printf("S5-father\n");
	cpid = wait(&status);
	printf("cpid: %d; status: %x\n", cpid, status);
	printf("WIFEXITED: %d; WEXITSTATUS: %d\n", WIFEXITED(status), WEXITSTATUS(status));
    }
    printf("S7\n");
    return 700;
}